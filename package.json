{
  "name": "camrec",
  "version": "1.0.0",
  "description": "多摄像头录制软件 - 兼容Windows 7",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [
    "camera",
    "recording",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/PythonSmall-Q/camrec.git"
  },
  "devDependencies": {
    "electron": "^21.4.4",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.camrec.app",
    "productName": "摄像头录制助手",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "fix-webm-duration": "^1.0.6"
  }
}
